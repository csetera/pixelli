    "version": "0.2.0",
    "configurations": [
      {
        "name": "Remote API Vite",
        "request": "launch",
        "runtimeExecutable": "yarn",
        "runtimeArgs": [
          "dev",
        ],
        "type": "node",
        "serverReadyAction": {
          "action": "debugWithChrome",
          "pattern": ".*Local.+:([0-9]+)\/",
          "uriFormat": "http://localhost:%s"
        }
      },
      {
        "name": "Local API Vite",
        "request": "launch",
        "runtimeExecutable": "yarn",
        "runtimeArgs": [
          "localapi",
        ],
        "type": "node",
        "serverReadyAction": {
          "action": "debugWithChrome",
          "pattern": ".*Local.+:([0-9]+)\/",
          "uriFormat": "http://localhost:%s"
        }
      },
    ],
  }
